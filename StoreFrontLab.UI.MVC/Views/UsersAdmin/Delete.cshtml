@model StoreFrontLab.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Deleting "+Model.Email;
}
<div class="offset-lg-2 col-lg-8 order-md-1 order-1">
    <h2>@ViewBag.Title</h2>

    <h3>Are you sure you want to delete the user @Model.Email?</h3>
    <div>
        <hr/>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete @Model.Email" class="btn btn-danger" /> |
                @Html.ActionLink("Cancel", "Index")
            </div>
        }
    </div>
</div>