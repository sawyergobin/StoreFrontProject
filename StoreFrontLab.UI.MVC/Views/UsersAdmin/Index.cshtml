@model IEnumerable<StoreFrontLab.UI.MVC.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}


<div class="offset-lg-2 col-lg-8 order-md-1 order-1">
    <h2>@ViewBag.Title</h2>
    <p>
        @Html.ActionLink("Add New User", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Modify User", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("User Info", "Details", new { id = item.Id })
                    
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class="btn btn-danger"})
                </td>
            </tr>
        }

    </table>
</div>