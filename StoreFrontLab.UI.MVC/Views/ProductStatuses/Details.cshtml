@model StoreFrontLab.DATA.EF.ProductStatus

@{
    ViewBag.Title = Model.StatusName+": Details";
}

<div class="offset-lg-2 col-lg-8 order-md-1 order-1">
    <h2>@ViewBag.Title</h2>
    <br />
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.StatusName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StatusName)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Modify Status", "Edit", new { id = Model.ProductStatusID }) |
        @Html.ActionLink("Back to Statuses", "Index")
    </p>
</div>