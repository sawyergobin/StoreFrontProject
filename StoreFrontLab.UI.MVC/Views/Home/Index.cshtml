@{
    ViewBag.Title = "Home";
}
@using StoreFrontLab.DATA.EF;
@{
    StoreFrontEntities db = new StoreFrontEntities();
}

@section heroBanner {

    <div class="hero__item set-bg" data-setbg="@Url.Content("~/Content/img/banner/VendingBanner.jpg")">
        <div class="hero__text">
            <span>Virtual Convenience</span>
            <h2>Snacks and Refreshment <br />From the comfort of your home</h2>
            <p>Free 1 Hour Express Delivery Available!</p>
            <a href="@Url.Action("Index", "Products")" class="primary-btn">SHOP NOW</a>
        </div>
    </div>
}
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="@Url.Content("~/Content/img/categories/SavorySnacksCatPic.jpg")">
                        <h5><a href="@Url.Action("SavorySnacks", "Products")">Savory Snacks</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="@Url.Content("~/Content/img/categories/SweetSnacksCatPic.jpg")">
                        <h5><a href="@Url.Action("SweetSnacks", "Products")">Sweet Snacks</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="@Url.Content("~/Content/img/categories/CarbRefreshCatPic.jpg")">
                        <h5><a href="@Url.Action("CarbRefresh", "Products")">Carbonated Refreshments</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="@Url.Content("~/Content/img/categories/RefreshCatPic.jpg")">
                        <h5><a href="@Url.Action("Refresh", "Products")">Refreshments</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Super Snacker Favorites</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".savorySnacks">Savory Snacks</li>
                        <li data-filter=".sweetSnacks">Sweet Snacks</li>
                        <li data-filter=".carbRefreshments">Carbonated Refreshments</li>
                        <li data-filter=".refreshments">Refreshments</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            <div class="col-lg-3 col-md-4 col-sm-6 mix sweetSnacks">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/Content/img/featured/reeses_pb_cups_1_large.jpg")">
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">Reese's Peanut Butter Cups</a></h6>
                        <h5>$1.58</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mix savorySnacks">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/Content/img/featured/f35b9d56-a87f-4497-96c3-6e7e29b1617e.3c66d9e82deb1f75bd10cfdc8e225445.jpg")">
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">Lays Barbecue Chips</a></h6>
                        <h5>$.97</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mix carbRefreshments">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/Content/img/featured/large-1524369050847-ll.jpg")">
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">Dr Pepper</a></h6>
                        <h5>$2.15</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mix refreshments">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/Content/img/featured/0009147593097_1_A1C1_1200.png")">
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">Milo's Sweet Tea</a></h6>
                        <h5>$2.95</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Featured Section End -->
